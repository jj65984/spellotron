<Window x:Class="Spellotron.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Debugging Log" Height="200" Width="400"
        Icon="/resources/images/info.ico" Closing="ClosingWin">
    <Window.ContextMenu>
        <ContextMenu StaysOpen="False">
            <MenuItem Header="_Increase Kinect View" Click="CM_KinectUp">
                <MenuItem.Icon>
                    <Image Source="resources/images/elevationUp.png" Stretch="Uniform" Height="16" Width="16" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="_Decrease Kinect View" Click="CM_KinectDown">
                <MenuItem.Icon>
                    <Image Source="resources/images/elevationDown.png" Stretch="Uniform" Height="16" Width="16" />
                </MenuItem.Icon>
            </MenuItem>                
            <Separator />
            <MenuItem Header ="_Save Debug Log" Click="CM_SaveLog">
                <MenuItem.Icon>
                    <Image Source="resources/images/saveHS.png" Stretch="Uniform" Height="16" Width="16" />
                </MenuItem.Icon>                
            </MenuItem>        
        </ContextMenu>
    </Window.ContextMenu>
    <Grid>
        <TextBox Grid.Row="1" Height="Auto" Width="Auto" Name="log"  IsReadOnly="True" VerticalScrollBarVisibility="Auto" />
    </Grid>
</Window>
